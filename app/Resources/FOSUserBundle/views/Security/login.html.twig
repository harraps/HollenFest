{% extends "FRHollenBundle::layout.html.twig" %}

{% block fos_user_content %}

{% for key, message in app.session.flashbag.all() %}
    <div class="alert alert-{{ key }}">
        {{ message|trans({}, 'FOSUserBundle') }}
    </div>
{% endfor %}

<div class="row">
    <div class="col-lg-offset-3 col-lg-6  col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10">
        <form role="form" class="form-horizontal well" action="{{ path('fos_user_security_check') }}" method="post">
            
            <legend>Connexion</legend>
            
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            
            <div class="form-group">
                <label for="username" class="col-lg-2 col-sm-2 control-label">Username</label>
                <div class="col-lg-8 col-sm-8">
                    <input class="form-control" type="text" id="username" name="_username" placeholder="Username" value="{{ last_username }}" required="required" />
                </div>
            </div>
            
            <div class="form-group">
                <label for="password" class="col-lg-2 col-sm-2 control-label">Password</label>
                <div class="col-lg-8 col-sm-8">
                    <input class="form-control" type="password" id="password" name="_password" placeholder="Password" required="required" />
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-8 col-sm-offset-2 col-sm-8">
                    <div class="checkbox checkbox-success">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">Remember me ?</label>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-lg-offset-8 col-lg-4 col-sm-offset-8 col-sm-4">
                    <input class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit" value="Valider" />
                </div>
            </div>
            
        </form>
    </div>
</div>

{% endblock fos_user_content %}