{% extends "FRHollenBundle::layout.html.twig" %}

{% block fos_user_content %}

<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>Merci</strong> de vous être inscrit {{ user.username }}<br/>
            Vous pouvez retourner à l'<a href="{{ path('fr_hollen_homepage') }}" class="alert-link">Accueil</a>
        </div>
    </div>
</div>

    {% if app.session is not empty %}
        {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
        {% if targetUrl is not empty %}
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <a href="{{ targetUrl }}" class="btn btn-lg btn-block btn-info">Retour</a>
            </div>
        </div>
        {% endif %}
    {% endif %}

{% endblock fos_user_content %}