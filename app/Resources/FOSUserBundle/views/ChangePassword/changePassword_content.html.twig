{% block fos_user_content %}

{% for key, messages in app.session.flashbag.all() %}
    {% for message in messages %}
    <div class="alert alert-{{ key }}">
        {{ message|trans({}, 'FOSUserBundle') }}
    </div>
    {% endfor %}
{% endfor %}

<div class="row">
    <div class="col-lg-offset-3 col-lg-6  col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10">
        <form id="fos_user_change_password" class="form-horizontal well" action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST">
            
            <legend>Changer le mot de passe</legend>
            
            <div class="form-group">
                <label for="fos_user_change_password_form_current_password" class="col-lg-2 col-sm-2 control-label">Mot de passe actuel</label>
                <div class="col-lg-8 col-sm-8">
                    {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'Current Password' } }) }}
                    {{ form_errors(form.current_password) }}
                </div>
            </div>
            
            <div class="form-group">
                <label for="fos_user_change_password_form_new_password" class="col-lg-2 col-sm-2 control-label">Nouveau mot de passe</label>
                <div class="col-lg-8 col-sm-8">
                    {{ form_widget(form.new_password, { 'attr': {'class': 'form-control', 'placeholder': 'New Password' } }) }}
                    {{ form_errors(form.new_password) }}
                </div>
            </div>
            
            <div class="form-group">
                <label for="fos_user_change_password_form_new_password_confirmation" class="col-lg-2 col-sm-2 control-label">Comfirmez le mot de passe</label>
                <div class="col-lg-8 col-sm-8">
                    {{ form_widget(form.new_password_confirmation, { 'attr': {'class': 'form-control', 'placeholder': 'New Password' } }) }}
                    {{ form_errors(form.new_password_confirmation) }}
                </div>
            </div>
            
            {{ form_rest(form) }}
            
            <div class="form-group">
                <div class="col-lg-offset-8 col-lg-4 col-sm-offset-8 col-sm-4">
                    <input class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit" value="Valider" />
                </div>
            </div>
            
        </form>
    </div>
</div>

{% endblock fos_user_content %}