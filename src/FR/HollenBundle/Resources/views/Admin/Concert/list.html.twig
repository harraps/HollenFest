{% extends "FRHollenBundle::layout.html.twig" %}

{% block content %}
<div class="page-header">
    <h1>
        List des concerts
        <a href="{{ path('fr_hollen_add_concert') }}" class="btn btn-success btn-lg pull-right">
            <span class="glyphicon glyphicon-plus"></span>
            <span class="hidden-xs">Ajouter</span>
        </a>
    </h1>
</div>

<div class="row">
    <div class="col-lg-12">

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Stage</th>
                    <th>Groupe</th>
                    <th>DÃ©but</th>
                    <th>Fin</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for concert in concerts %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ concert.stage.name }}</td>
                    <td>{{ concert.rockband.name }}</td>
                    <td>{{ concert.beginTime.format("h:i d/m/Y") }}</td>
                    <td>{{ concert.endTime.format("h:i d/m/Y") }}</td>
                    <td>
                        <div class="btn-group btn-group-xs pull-right">
                            <a href="{{ path('fr_hollen_add_concert',{ 'id':concert.id }) }}" class="btn btn-warning">
                                <span class="glyphicon glyphicon-asterisk"></span>
                                <span class="hidden-xs">Modifier</span>
                            </a>
                            <a href="{{ path('fr_hollen_remove_concert',{ 'id':concert.id }) }}" class="btn btn-danger">
                                <span class="glyphicon glyphicon-remove"></span>
                                <span class="hidden-xs">Supprimer</span>
                            </a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
</div>

{% endblock %}