{% extends "FRHollenBundle::layout.html.twig" %}

{% block content %}
<div class="page-header">
    <h1>
        List des rockbands
        <a href="{{ path('fr_hollen_add_rockband') }}" class="btn btn-success btn-lg pull-right">
            <span class="glyphicon glyphicon-plus"></span>
            <span class="hidden-xs">Ajouter</span>
        </a>
    </h1>
</div>

<div class="row">
    <div class="col-lg-12">

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Rockband</th>
                    <th>Genres</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for rockband in rockbands %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ rockband.name }}</td>
                    <td>
                        {% for genre in rockband.genres %}
                            {{ genre.name }}, 
                        {% endfor %}
                    </td>
                    <td>
                        <div class="btn-group btn-group-xs pull-right">
                            <a href="{{ path('fr_hollen_add_rockband',{ 'id':rockband.id }) }}" class="btn btn-warning">
                                <span class="glyphicon glyphicon-asterisk"></span>
                                <span class="hidden-xs">Modifier</span>
                            </a>
                            <a href="{{ path('fr_hollen_remove_rockband',{ 'id':rockband.id }) }}" class="btn btn-danger">
                                <span class="glyphicon glyphicon-remove"></span>
                                <span class="hidden-xs">Supprimer</span>
                            </a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
</div>

{% endblock %}