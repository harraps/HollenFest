{% extends "FRHollenBundle::layout.html.twig" %}

{% block content %}

<div class="page-header">
    <h1>
        Ajouter un genre
    </h1>
</div>

<div class="row"> 
    <div class="col-lg-offset-3 col-lg-6  col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10">
        {{ form_start(form,{'attr':{'class':'form-horizontal well'}}) }}
            
            {# print errors in the form #}
            {{ form_errors(form) }}
            
            <div class="form-group">
                {{ form_label(form.name, "Nom du genre", {'label_attr':{'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.name) }}
                <div class="col-sm-8">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-success btn-lg btn-block'}}) }}
                </div>
            </div>
            
            {{ form_rest(form) }}
        
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}